{
  "name": "wiejakp/symfonypress",
  "description": "Integrate WordPress within Symfony",
  "type": "project",
  "license": "proprietary",
  "authors": [
    {
      "name": "Przemek Wiejak",
      "email": "wiejakp@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "wiejakp\\SymfonyPress\\Composer\\": "composer/"
    }
  },
  "require": {
    "php": "~7.1",
    "symfony/yaml": "^3.3"

  },
  "scripts": {
    "installer_wordpress": [
      "wiejakp\\SymfonyPress\\Composer\\WordPressInstaller::run"
    ],
    "post-install-cmd": [
      "@installer_wordpress"
    ],
    "post-update-cmd": [
      "@installer_wordpress"
    ]
  },
  "extra": {
    "base": {
      "dirs": {
        "private": "private/",
        "shared": "shared/",
        "public": "public/"
      },
      "file": "private/config.json"
    },
    "installers": {
      "wordpress": {
        "dir": "wordpress/",
        "config": "wp-config.php",
        "require": {
          "wp-cli/wp-cli": "^1.4"
        }
      }
    }
  }
}

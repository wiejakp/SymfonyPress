{
  "name": "wiejakp/symfonypress",
  "description": "Integrate WordPress within Symfony",
  "type": "project",
  "license": "proprietary",
  "authors": [
    {
      "name": "Przemek Wiejak",
      "email": "wiejakp@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "wiejakp\\SymfonyPress\\Composer\\": "Composer/"
    }
  },
  "require": {
    "php": "~7.1"
  },
  "require-dev": {
    "composer/composer": "dev-master",
    "symfony/yaml": "^3.0",
    "wp-cli/wp-cli": "dev-master"
  },
  "scripts": {
    "symfonypress-install": [
      "wiejakp\\SymfonyPress\\Composer\\Installer::input",
      "wiejakp\\SymfonyPress\\Composer\\Installer::install_symfony",
      "wiejakp\\SymfonyPress\\Composer\\Installer::install_wordpress"
    ],
    "symfonypress-update": [
      "wiejakp\\SymfonyPress\\Composer\\Installer::update_symfony",
      "wiejakp\\SymfonyPress\\Composer\\Installer::update_wordpress",
      "wiejakp\\SymfonyPress\\Composer\\Installer::install_symfony_symlinks",
      "wiejakp\\SymfonyPress\\Composer\\Installer::install_wordpress_symlinks"
    ],
    "post-update-cmd": [
      "@symfonypress-install",
      "@symfonypress-update"
    ]
  },
  "extra": {
    "dir": "config/",
    "filename": "settings.yml",
    "symfony": {
      "dir": "symfony/",
      "config": "app/config/",
      "filename": "parameters.yml",
      "version": "symfony/framework-standard-edition",
      "require": [
        {
          "user": "wiejakp",
          "title": "wordpress-bundle",
          "version": "dev-master",
          "type": "vcs",
          "url": "https://github.com/wiejakp/WordPressBundle"
        }
      ],
      "symlink": [
        {
          "input_filename": "*",
          "input_dir": "symlink/symfony/Command/",
          "output_dir": "src/AppBundle/Command/",
          "command": "symfonypress:enable 'Ekino\\WordpressBundle\\EkinoWordpressBundle'"
        }
      ]
    },
    "wordpress": {
      "dir": "wordpress/",
      "config": "",
      "filename": "wp-config.php",
      "symlink": [
        {
          "input_filename": "index.php",
          "input_dir": "symlink/wordpress/",
          "output_dir": ""
        }
      ]
    }
  }
}
